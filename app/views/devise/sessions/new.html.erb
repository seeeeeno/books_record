<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label "ユーザー名" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "inputForm" %>
  </div>

  <div class="field">
    <%= f.label "パスワード" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "inputForm" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="checkField">
      <%= f.check_box :remember_me, class: "checkBox" %>
      <%= f.label "ログイン情報を保持する" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class: "loginBtn" %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>

