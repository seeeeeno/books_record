= render "books/header"
.main_content
  .books_card
    .card_header
      .header_character
        %p= current_user.name
    .card_title
      %p 図書カード
    .add_book
      = link_to new_book_path do
        = icon('fas', 'plus')
        本を追加
    .books_contents
      .books_column
        .column_started
          読始日
        .column_finidhed
          読了日
        .column_title
          本のタイトル
        .column_author
          著者
      - @books.each do |book|
        = link_to book_path(book) do
          .books_data
            .started
              = book.started_at
            .finidhed
              = book.finished_at
            .title
              = book.title
            .author 
              = book.author
      .footer